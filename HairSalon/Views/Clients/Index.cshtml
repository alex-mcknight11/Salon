@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added yet!</h3>
} 

<ul>
  @foreach(Clients clients in Model)
  {
    <li>@Html.ActionLink($"{clients.Name}", "Details", new { id = clients.ClientsId })</li>
  }
</ul>

<p>@Html.ActionLink("Add new clients", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>